{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "currency-converter",
  "version": "0.1.0",
  "identifier": "com.xcubicarnament.currency-converter",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "currency-converter",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": [
      {
        "wix": {
          "license": "../LICENSE.md",
          "dialogImagePath": "",
          "bannerPath": "",
          "certificatePath": null,
          "certificatePassword": null,
          "diskPath": "",
          "headerArch": "x64",
          "binaries": [],
          "installScope": "perMachine",
          "languages": [
            {
              "languageId": "1033",
              "languageName": "English (United States)"
            }
          ],
          "fragmentPaths": [],
          "componentGroupRefs": []
        }
      }
    ]
  }
}
